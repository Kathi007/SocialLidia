<Window x:Class="SocialLidia.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SocialLidia"
        mc:Ignorable="d"
        Title="Window1" WindowStyle="None" ResizeMode="NoResize" WindowState="Maximized" Height="600" Width="1300" >
    <Grid x:Name="Vorname_Textbox" Margin="10,0,0,0" Background="#FFDDDDDD">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Label Content="Registrieren" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" Margin="1" VerticalAlignment="Center" FontSize="60" FontFamily="Palatino Linotype" />
        <Label Content="Vorname: " Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left" Margin="5" VerticalAlignment="Center" FontSize="20" FontFamily="Palatino Linotype"/>
        <TextBox x:Name="Vorname_Textbox1" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" Height="30" Margin="10" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="450" FontSize="20" FontFamily="Palatino Linotype"/>
        <Label Content="Nachname:" Grid.Column="1" HorizontalAlignment="Left" Margin="5" Grid.Row="1" VerticalAlignment="Center" FontSize="20" FontFamily="Palatino Linotype"/>
        <TextBox x:Name="Nachname_Textbox" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Right" Height="30" Margin="10" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="450" FontSize="20" FontFamily="Palatino Linotype"/>
        <Label Content="Alter: " HorizontalAlignment="Left" Margin="5" Grid.Row="2" VerticalAlignment="Center" FontSize="20" FontFamily="Palatino Linotype"/>
        <TextBox x:Name="Alter_Textbox" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right" Height="30" Margin="5" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="450" FontSize="20" FontFamily="Palatino Linotype"/>
        <Label Content="Username:" Grid.Column="1" HorizontalAlignment="Left" Margin="5" Grid.Row="2" VerticalAlignment="Center" FontSize="20" FontFamily="Palatino Linotype"/>
        <TextBox x:Name="Username_Textbox" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Right" Height="30" Margin="10" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="450" FontSize="20" FontFamily="Palatino Linotype"/>
        <RadioButton x:Name="w_Radiobutton" Grid.Row="3" Grid.Column="0" Content="weiblich" HorizontalAlignment="Left" Margin="10" VerticalAlignment="Center" Width="150" FontSize="20" FontFamily="Palatino Linotype"/>
        <RadioButton x:Name="m_RadioButton" Grid.Row="3" Grid.Column="0" Content="männlich" HorizontalAlignment="Right" Margin="10" VerticalAlignment="Center" Width="150" FontSize="20" FontFamily="Palatino Linotype"/>
        <Label Content="Passwort: " Grid.Column="1" Grid.RowSpan="2" HorizontalAlignment="Left" Margin="10" Grid.Row="3" VerticalAlignment="Center" FontSize="20" FontFamily="Palatino Linotype"/>
        <TextBox x:Name="Passwort_Textbox"  Grid.Row="3" Grid.Column="1" Grid.RowSpan="2" HorizontalAlignment="Right" Height="30" Margin="10" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="450" FontSize="20" FontFamily="Palatino Linotype" TextChanged="Passwort_Textbox_TextChanged"/>
        <Button Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Grid.RowSpan="2" Content="registrieren" HorizontalAlignment="Center" Margin="10" Width="200" VerticalAlignment="Top" Height="40"  Click="Button_Click" FontSize="20" FontFamily="Palatino Linotype" Background="#FF173D55" Foreground="#FFEEEEEE"/>
        <Label x:Name="Fehler_Label" Content="&#xD;&#xA;" HorizontalAlignment="Left" Margin="79,26,0,0" Grid.Row="4" VerticalAlignment="Top" Height="76" Width="397" FontFamily="Palatino Linotype" Background="White" FontSize="20" Foreground="#FFAB0F0F"/>


    </Grid>
</Window>
